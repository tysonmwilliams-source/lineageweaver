{
  "_template_info": {
    "name": "LineageWeaver Family Import Template",
    "version": "1.0.0",
    "description": "Template for bulk importing a complete family with all integration points",
    "instructions": "See TEMPLATE_GUIDE.md for detailed instructions on filling this out",
    "author": "Ty Williams",
    "created": "2025-01-14"
  },

  "_id_system": {
    "explanation": "Use temporary string IDs like 'person_1', 'house_main' throughout this template. The import process will convert these to real database IDs and maintain all references correctly.",
    "example": "If 'person_1' is parent of 'person_2', the relationship uses those same IDs. After import, both will have real numeric IDs with the parent-child relationship preserved."
  },

  "houses": [
    {
      "_tempId": "house_main",
      "_comment": "The main/founding house of this family",
      "houseName": "House [SURNAME]",
      "houseType": "main",
      "parentHouseId": null,
      "colorCode": "#4169E1",
      "motto": "[House motto]",
      "sigil": "[Text description of sigil/coat of arms]",
      "foundedDate": null,
      "foundedBy": null,
      "swornTo": null,
      "notes": "[Any notes about the house]"
    },
    {
      "_tempId": "house_cadet_example",
      "_comment": "Example cadet branch (delete if not needed)",
      "houseName": "House [BRANCH_NAME]",
      "houseType": "cadet",
      "parentHouseId": "house_main",
      "colorCode": "#5179F1",
      "motto": null,
      "sigil": null,
      "foundedDate": "[YYYY]",
      "foundedBy": "person_cadet_founder",
      "swornTo": "house_main",
      "notes": "Cadet branch founded by [FOUNDER_NAME]"
    },
    {
      "_tempId": "house_spouse_family",
      "_comment": "Example external house that someone married into from",
      "houseName": "House [SPOUSE_FAMILY]",
      "houseType": "main",
      "parentHouseId": null,
      "colorCode": "#DC143C",
      "motto": null,
      "sigil": null,
      "foundedDate": null,
      "foundedBy": null,
      "swornTo": null,
      "notes": "External house"
    }
  ],

  "people": [
    {
      "_tempId": "person_patriarch",
      "_comment": "The oldest generation - family patriarch",
      "_generation": 1,
      "firstName": "[FIRST_NAME]",
      "lastName": "[SURNAME]",
      "maidenName": null,
      "dateOfBirth": "[YYYY]",
      "dateOfDeath": "[YYYY or null if living]",
      "gender": "male",
      "houseId": "house_main",
      "legitimacyStatus": "legitimate",
      "bastardStatus": null,
      "notes": "[Character notes]",
      "epithets": []
    },
    {
      "_tempId": "person_matriarch",
      "_comment": "The oldest generation - family matriarch (married into family)",
      "_generation": 1,
      "firstName": "[FIRST_NAME]",
      "lastName": "[SURNAME]",
      "maidenName": "[ORIGINAL_SURNAME]",
      "dateOfBirth": "[YYYY]",
      "dateOfDeath": "[YYYY or null if living]",
      "gender": "female",
      "houseId": "house_spouse_family",
      "legitimacyStatus": "legitimate",
      "bastardStatus": null,
      "notes": "[Character notes]",
      "epithets": []
    },
    {
      "_tempId": "person_child_1",
      "_comment": "First child of patriarch/matriarch",
      "_generation": 2,
      "firstName": "[FIRST_NAME]",
      "lastName": "[SURNAME]",
      "maidenName": null,
      "dateOfBirth": "[YYYY]",
      "dateOfDeath": null,
      "gender": "male",
      "houseId": "house_main",
      "legitimacyStatus": "legitimate",
      "bastardStatus": null,
      "notes": "",
      "epithets": []
    },
    {
      "_tempId": "person_child_2",
      "_comment": "Second child - female who may marry out",
      "_generation": 2,
      "firstName": "[FIRST_NAME]",
      "lastName": "[MARRIED_SURNAME]",
      "maidenName": "[BIRTH_SURNAME]",
      "dateOfBirth": "[YYYY]",
      "dateOfDeath": null,
      "gender": "female",
      "houseId": "house_main",
      "legitimacyStatus": "legitimate",
      "bastardStatus": null,
      "notes": "",
      "epithets": []
    },
    {
      "_tempId": "person_bastard_example",
      "_comment": "Example bastard child (delete if not needed)",
      "_generation": 2,
      "firstName": "[FIRST_NAME]",
      "lastName": "[BASTARD_SURNAME]",
      "maidenName": null,
      "dateOfBirth": "[YYYY]",
      "dateOfDeath": null,
      "gender": "male",
      "houseId": "house_main",
      "legitimacyStatus": "bastard",
      "bastardStatus": "active",
      "notes": "Natural child of [PARENT_NAME]",
      "epithets": []
    },
    {
      "_tempId": "person_adopted_example",
      "_comment": "Example adopted child (delete if not needed)",
      "_generation": 2,
      "firstName": "[FIRST_NAME]",
      "lastName": "[SURNAME]",
      "maidenName": null,
      "dateOfBirth": "[YYYY]",
      "dateOfDeath": null,
      "gender": "female",
      "houseId": "house_main",
      "legitimacyStatus": "adopted",
      "bastardStatus": null,
      "notes": "Adopted into the family [YEAR]",
      "epithets": []
    },
    {
      "_tempId": "person_grandchild_1",
      "_comment": "Third generation example",
      "_generation": 3,
      "firstName": "[FIRST_NAME]",
      "lastName": "[SURNAME]",
      "maidenName": null,
      "dateOfBirth": "[YYYY]",
      "dateOfDeath": null,
      "gender": "male",
      "houseId": "house_main",
      "legitimacyStatus": "legitimate",
      "bastardStatus": null,
      "notes": "",
      "epithets": []
    }
  ],

  "relationships": [
    {
      "_comment": "MARRIAGE: Patriarch and Matriarch",
      "person1Id": "person_patriarch",
      "person2Id": "person_matriarch",
      "relationshipType": "spouse",
      "marriageDate": "[YYYY-MM-DD or null]",
      "divorceDate": null,
      "marriageStatus": "married"
    },
    {
      "_comment": "PARENT: Patriarch is parent of Child 1",
      "person1Id": "person_patriarch",
      "person2Id": "person_child_1",
      "relationshipType": "parent",
      "biologicalParent": true
    },
    {
      "_comment": "PARENT: Matriarch is parent of Child 1",
      "person1Id": "person_matriarch",
      "person2Id": "person_child_1",
      "relationshipType": "parent",
      "biologicalParent": true
    },
    {
      "_comment": "PARENT: Patriarch is parent of Child 2",
      "person1Id": "person_patriarch",
      "person2Id": "person_child_2",
      "relationshipType": "parent",
      "biologicalParent": true
    },
    {
      "_comment": "PARENT: Matriarch is parent of Child 2",
      "person1Id": "person_matriarch",
      "person2Id": "person_child_2",
      "relationshipType": "parent",
      "biologicalParent": true
    },
    {
      "_comment": "ADOPTED PARENT example (delete if not needed)",
      "person1Id": "person_patriarch",
      "person2Id": "person_adopted_example",
      "relationshipType": "adopted-parent"
    },
    {
      "_comment": "BASTARD PARENT - only biological parent listed",
      "person1Id": "person_patriarch",
      "person2Id": "person_bastard_example",
      "relationshipType": "parent",
      "biologicalParent": true
    },
    {
      "_comment": "GRANDPARENT relationship via child",
      "person1Id": "person_child_1",
      "person2Id": "person_grandchild_1",
      "relationshipType": "parent",
      "biologicalParent": true
    }
  ],

  "codexEntries": [
    {
      "_tempId": "codex_house_main",
      "_comment": "Codex entry for the main house (optional - can be auto-generated)",
      "_autoLink": {
        "entityType": "house",
        "entityId": "house_main"
      },
      "type": "house",
      "title": "House [SURNAME]",
      "subtitle": "Noble House",
      "content": "## History\n\n[House history here]\n\n## Notable Members\n\n- [[Person Name]] - Description\n\n## Holdings\n\n[Territories, castles, etc.]",
      "category": "main",
      "tags": ["noble", "house"],
      "era": null
    },
    {
      "_tempId": "codex_person_patriarch",
      "_comment": "Codex biography for the patriarch (optional)",
      "_autoLink": {
        "entityType": "person",
        "personId": "person_patriarch"
      },
      "type": "people",
      "title": "[FULL NAME]",
      "subtitle": "[Title or epithet]",
      "content": "## Biography\n\n[Life story here]\n\n## Family\n\nMarried to [[Matriarch Name]].\n\n## Legacy\n\n[Impact on the family]",
      "category": "nobility",
      "tags": ["patriarch", "founder"],
      "era": "[Era name if applicable]"
    }
  ],

  "heraldry": [
    {
      "_tempId": "heraldry_house_main",
      "_comment": "Heraldry for the main house (optional - can be created in The Armory)",
      "_autoLink": {
        "entityType": "house",
        "entityId": "house_main"
      },
      "name": "Arms of House [SURNAME]",
      "description": "[Blazon or description of the coat of arms]",
      "category": "noble",
      "tags": ["house", "noble"]
    }
  ],

  "dignities": [
    {
      "_tempId": "dignity_example",
      "_comment": "Example dignity/title (optional - delete if not needed)",
      "name": "Lord of [TERRITORY]",
      "shortName": "Lord [TERRITORY]",
      "dignityClass": "lord",
      "dignityRank": 5,
      "swornToId": null,
      "currentHolderId": "person_patriarch",
      "currentHouseId": "house_main"
    }
  ],

  "_validation_rules": {
    "people": {
      "required": ["firstName", "lastName", "gender", "houseId"],
      "gender_options": ["male", "female", "other"],
      "legitimacyStatus_options": ["legitimate", "bastard", "adopted", "unknown"],
      "bastardStatus_options": [null, "active", "legitimized", "founded"]
    },
    "houses": {
      "required": ["houseName"],
      "houseType_options": ["main", "cadet", "vassal", "extinct"]
    },
    "relationships": {
      "required": ["person1Id", "person2Id", "relationshipType"],
      "relationshipType_options": ["parent", "spouse", "adopted-parent", "foster-parent", "mentor", "named-after"],
      "note_parent": "For parent relationships, person1Id is the PARENT, person2Id is the CHILD",
      "note_spouse": "For spouse relationships, order doesn't matter"
    }
  }
}
